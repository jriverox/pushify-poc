{
  "name": "pushify-poc-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "pushify-api",
    "broadcaster-api",
    "web-app"
  ],
  "scripts": {
    "dev:api": "pnpm --filter pushify-api dev",
    "dev:broadcaster": "pnpm --filter broadcaster-api dev",
    "dev:web": "pnpm --filter web-app dev",
    "dev": "concurrently -n api,broad,web -c blue,magenta,green \"pnpm dev:api\" \"pnpm dev:broadcaster\" \"pnpm dev:web\"",
    "build": "pnpm -r run build",
    "start": "pnpm --filter web-app start"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "packageManager": "pnpm@9"
}
